16	14
87
 */
public class KnapsackDP {
	static final int MAX_NUM = 3402;
	static final int MAX_WEIGHT = 12880;
	static int[] weight = new int[MAX_NUM + 10];
	static int[] value = new int[MAX_NUM + 10];
	static int[][] aMaxValue = new int[MAX_NUM + 10][12880];
	
	public static void main(String[] args){
		Scanner scanner = new Scanner(System.in);
		int N = scanner.nextInt();
		int M = scanner.nextInt();
		for(int i = 0; i < N; i++){
			weight[i] = scanner.nextInt();
			value[i] = scanner.nextInt();
		}
		for(int i = 0; i < N; i++){
			Arrays.fill(aMaxValue[i], -1);
		}
		for(int i = 1; i < N; i++){
			for(int j = 0; j <= M; j++){
				aMaxValue[i][j] = aMaxValue[i-1][j];
				if(weight[i] < j){
					aMaxValue[i][j] = Math.max(aMaxValue[i-1][j], aMaxValue[i-1][j-weight[i]] + value[i]);
				}
			}
		}
		System.out.println(aMaxValue[N-1][M]); 
	}
}
